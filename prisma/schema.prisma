generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL") // pooled connection (has "-pooler")
  directUrl = env("DATABASE_URL_UNPOOLED") // direct connection (no "-pooler")
}

